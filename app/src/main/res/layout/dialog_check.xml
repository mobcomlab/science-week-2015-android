<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:paddingBottom="45dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="แจ้งเตือน"
        android:id="@+id/status_question"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center|center_vertical"
        android:background="#F44336"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_below="@+id/status_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="เนื่องจากระบบปฏิบัติการเอนดรอยด์ของคุณไม่เหมาะกับเกมเควสนี้"
        android:padding="20dp"
        android:id="@+id/description_problem" />

    <LinearLayout

        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_problem">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="บันทึก"
            android:textColor="#ff000000"
             />

    </LinearLayout>


</RelativeLayout>
