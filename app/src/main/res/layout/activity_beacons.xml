<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sanuphap.scienceweeks.uiBeacon.BeaconActivity"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Beacon"
        android:id="@+id/title"
        android:gravity="center|center_vertical"
        android:background="@color/color_bar"
        android:textColor="@color/color_font"  />

    <ImageView
        android:layout_width="@dimen/wifi_image_width"
        android:layout_height="@dimen/wifi_image_width"
        android:id="@+id/imgwifi"
        android:src="@drawable/ani4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Searching..."
        android:id="@+id/status"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_status_beacon"
        android:textColor="#ff696969"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="@dimen/size_img_distance"
            android:layout_height="@dimen/size_img_distance"
            android:id="@+id/circle_a"
            android:src="@drawable/circle_red"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="@dimen/size_img_distance"
            android:layout_height="@dimen/size_img_distance"
            android:id="@+id/circle_b"
            android:src="@drawable/circle_red"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <ImageView
            android:layout_width="@dimen/size_img_distance"
            android:layout_height="@dimen/size_img_distance"
            android:id="@+id/circle_c"
            android:src="@drawable/circle_red" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/footer"
        android:background="#3a1d252c"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/lable_description"
            android:text="คำอธิบาย"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textIsSelectable="false"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="description"
            android:id="@+id/description"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>
