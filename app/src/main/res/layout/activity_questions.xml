<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.example.sanuphap.scienceweeks.uiQuestion.QuestionActivity">

    <TextView
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/question"
        android:text="คำถาม"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingLeft="5dp"

        android:paddingRight="5dp"

        android:gravity="center|center_vertical"
        android:layout_below="@+id/nuber_order"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="คำตอบ 1 "
        android:id="@+id/choiceA"
        android:gravity="center|center_vertical"
        android:background="@drawable/selected"
        android:textColor="#ff272727"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:longClickable="false"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="คำตอบ 2 "
        android:id="@+id/choiceB"
        android:layout_below="@+id/choiceA"
        android:layout_alignLeft="@+id/choiceA"
        android:layout_alignStart="@+id/choiceA"
        android:layout_marginTop="12dp"
        android:gravity="center|center_vertical"
        android:background="@drawable/selected"
        android:textColor="#ff272727"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:longClickable="false" />

    <TextView
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="คำตอบ 3 "
        android:id="@+id/choiceC"
        android:layout_below="@+id/choiceB"
        android:layout_alignLeft="@+id/choiceB"
        android:layout_alignStart="@+id/choiceB"
        android:layout_marginTop="12dp"
        android:gravity="center|center_vertical"
        android:background="@drawable/selected"
        android:textColor="#ff272727"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:longClickable="false" />

    <TextView
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="คำตอบ 4 "
        android:id="@+id/choiceD"
        android:layout_below="@+id/choiceC"
        android:layout_alignLeft="@+id/choiceC"
        android:layout_alignStart="@+id/choiceC"
        android:layout_marginTop="12dp"
        android:gravity="center|center_vertical"
        android:background="@drawable/selected"
        android:textColor="#ff272727"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:longClickable="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1/4"
        android:id="@+id/nuber_order"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center|center_vertical"
        android:background="@color/color_bar"
        android:textColor="@color/color_font" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true"
        android:background="#ff313131"
        android:layout_marginTop="0dp" />

</RelativeLayout>
