<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sanuphap.scienceweeks.uiQuestion.ScoreQuestion">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YOUR SCORE "
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00%"
        android:id="@+id/score_user"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:textSize="60dp"
        android:textStyle="bold"
        android:gravity="center|center_vertical"
        android:background="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FAIL"
        android:id="@+id/text_status"
        android:layout_below="@+id/score_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textStyle="bold"
        android:textSize="55dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play again"
        android:id="@+id/btn_again"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="32dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/text_status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/btn_save"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/btn_again"
        android:layout_toRightOf="@+id/btn_again"
        android:layout_toEndOf="@+id/btn_again" />
</RelativeLayout>
