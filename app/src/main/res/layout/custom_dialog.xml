<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:paddingBottom="45dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/status_question"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="correct" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YOUR SCORE "
        android:id="@+id/status_question"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center|center_vertical"
        android:background="#F44336"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_playagain"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="เล่นอีกครั้ง"
        android:textColor="#ff000000"
        android:layout_below="@+id/image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="บันทึก"
        android:textColor="#ff000000"
        android:layout_below="@+id/image"
        android:layout_toRightOf="@+id/btn_playagain"
        android:layout_toEndOf="@+id/btn_playagain" />


</RelativeLayout>
