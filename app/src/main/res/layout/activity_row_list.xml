<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sanuphap.scienceweeks.row_list">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img_circle"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/bg_circle"
        android:paddingLeft="0dp"
        android:padding="0dp"
        android:background="@drawable/bg_circle" />

    <TextView
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Find a item"
        android:id="@+id/sample_name_Quest"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_below="@+id/img_circle"
        android:layout_alignRight="@+id/img_circle"
        android:layout_alignEnd="@+id/img_circle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
